rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is admin
    function isAdmin() {
      return request.auth != null 
        && exists(/databases/$(database)/documents/users/$(request.auth.uid))
        && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
    // Helper function to check if user is shelter
    function isShelter() {
      return request.auth != null 
        && exists(/databases/$(database)/documents/users/$(request.auth.uid))
        && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'shelter';
    }
    
    // Users collection
    match /users/{userId} {
      // Read: user can read their own data OR admin can read all users
      allow read: if request.auth != null && (request.auth.uid == userId || isAdmin());
      
      // Write: user can write their own data OR admin can write any user data
      allow write: if request.auth != null && (request.auth.uid == userId || isAdmin());
      
      // Create: anyone authenticated can create (for registration)
      allow create: if request.auth != null;
    }
    
    // Pets collection - shelter users can create, everyone can read
    match /pets/{petId} {
      allow read: if request.auth != null;
      allow create, update, delete: if isShelter() || isAdmin();
    }
    
    // Events collection - shelter users can create, everyone can read
    match /events/{eventId} {
      allow read: if request.auth != null;
      allow create, update, delete: if isShelter() || isAdmin();
    }
    
    // Shelter verifications - authenticated users can create their own, admin can read all
    match /shelter_verifications/{userId} {
      allow read: if request.auth != null && (request.auth.uid == userId || isAdmin());
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Adoption requests (if implemented later)
    match /adoption_requests/{requestId} {
      allow read, write: if request.auth != null;
    }
  }
}